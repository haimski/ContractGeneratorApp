{
  "name": "quote-generator-mern",
  "version": "1.0.0",
  "description": "Quote Generator - MERN Stack Application",
  "scripts": {
    "install-all": "npm install && cd server && npm install && cd ../client && npm install",
    "dev": "concurrently --names \"server,client\" --prefix-colors \"cyan,magenta\" \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm run dev",
    "build": "cd client && npm install && npm run build",
    "vercel-build": "npm run build",
    "start": "node server/server.js"
  },
  "keywords": ["quote", "generator", "mern", "automation"],
  "author": "Automation School",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
